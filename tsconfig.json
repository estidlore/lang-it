{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
